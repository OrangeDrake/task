{
	"info": {
		"_postman_id": "8a0b8797-d478-4e40-8bc9-6684aff313b4",
		"name": "User Retrieval Tests",
		"description": "Test suite for retrieving users",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "17117872"
	},
	"item": [
		{
			"name": "Get Existing User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Should retrieve user successfully\", function () {",
							"    pm.response.to.have.status(200);",
							"    pm.response.to.be.json;",
							"    var responseJson = pm.response.json();",
							"    pm.expect(responseJson).to.have.property(\"id\");",
							"    pm.expect(responseJson.id).to.eql(1);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{server}}/api/users/1",
					"host": [
						"{{server}}"
					],
					"path": [
						"api",
						"users",
						"1"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Non-Existing User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Should return 404 for non-existing user\", function () {",
							"    pm.response.to.have.status(404);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{server}}/api/users/99999",
					"host": [
						"{{server}}"
					],
					"path": [
						"api",
						"users",
						"99999"
					]
				}
			},
			"response": []
		}
	]
}